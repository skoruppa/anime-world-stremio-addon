# Flask Configuration
FLASK_RUN_HOST=0.0.0.0
FLASK_RUN_PORT=5000
FLASK_DEBUG=False

# TMDB API Key (REQUIRED)
# Get your API key from: https://www.themoviedb.org/settings/api
TMDB_API_KEY=your_tmdb_api_key_here

# Database Configuration
# Option 1: SQLite (default, recommended for small deployments)
DB_TYPE=sqlite
DB_PATH=mappings.db

# Option 2: PostgreSQL (recommended for production)
# DB_TYPE=postgresql
# DATABASE_URL=postgresql://user:password@localhost:5432/anime_addon

# Gunicorn Configuration (optional)
# GUNICORN_WORKERS=2  # Default: 2 (optimized for 512MB RAM)
# For servers with more RAM: GUNICORN_WORKERS=4

# Server Configuration (optional)
# PROTOCOL=https
# REDIRECT_URL=your-domain.com
